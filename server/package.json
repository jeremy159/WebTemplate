{
  "name": "web-template",
  "version": "0.0.1",
  "description": "Un Web template pour diff√©rents projets",
  "scripts": {
    "start": "tsc && concurrently --kill-others \"tsc -w \" \"nodemon out/www.js\" ",
    "lint": "tslint app/**/*.ts app/*.ts --force -t verbose",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "clean": "rimraf out node_modules",
    "postinstall": "rimraf false",
    "test": "tsc && mocha out/**/*.spec.js -R spec -c -u exports --harmony",
    "coverage": "tsc && nyc --require ts-node/register _mocha -c -R spec -- out/**/*.js",
    "nyan-coverage": "tsc && nyc --require ts-node/register _mocha -c -R nyan -- out/**/*.js"
  },
  "nyc": {
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "mocha": {
    "colors": true
  },
  "dependencies": {
    "@types/mongodb": "^2.2.11",
    "@types/socket.io": "^1.4.30",
    "body-parser": "^1.15.2",
    "concurrently": "3.1.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.3",
    "debug": "^2.6.0",
    "express": "^4.14.0",
    "mongodb": "^2.2.31",
    "morgan": "^1.7.0",
    "socket.io": "^1.7.4",
    "systemjs": "^0.19.41"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chai": "^3.4.34",
    "@types/cookie-parser": "^1.3.30",
    "@types/cors": "^2.8.1",
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.34",
    "@types/mocha": "^2.2.36",
    "@types/morgan": "^1.7.32",
    "@types/node": "^6.0.56",
    "@types/socket.io": "^1.4.27",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2",
    "remap-istanbul": "^0.8.4",
    "rimraf": "^2.5.4",
    "ts-node": "^2.1.0",
    "tslint": "^4.2.0",
    "tslint-eslint-rules": "^3.2.3",
    "typescript": "^2.1.4"
  }
}
